@using Microsoft.AspNetCore.Diagnostics
@model IStatusCodeReExecuteFeature
@{
    ViewData["Title"] = "Not Found";
    var path = Model?.OriginalPath;
}
<div class="py-5">
    <h1 class="h3 mb-3">404 — This resource does not exist</h1>
    @if (!string.IsNullOrEmpty(path))
    {
        <p class="text-muted mb-4">Requested URL: <code>@path@Model?.OriginalQueryString</code></p>
    }
    <a class="btn btn-primary" href="/">Go to Home</a>
    <button class="btn btn-outline-secondary ms-2" onclick="history.back()">Go Back</button>
</div>
