@{
    ViewData["Title"] = "Home";
    var count = (int)(ViewData["CustomerCount"] ?? 0);
}
<div class="row g-4">
    <div class="col-12">
        <h1 class="h3 mb-0">AlertPortal</h1>
        <p class="text-muted">Internal admin · MVC + MariaDB</p>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-2">Customers</h5>
                <p class="card-text mb-3">Total: <span class="fw-semibold">@count</span></p>
                <a class="btn btn-primary" asp-controller="Customers" asp-action="Index">Open Customers</a>
            </div>
        </div>
    </div>
</div>

