@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AlertPortal</title>

    <!-- Local Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <!-- (optional) local bootstrap-icons -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_content/Coe.UI/css/coe.ui.css" asp-append-version="true" />
    <script src="~/_content/Coe.UI/js/coe.ui.js" asp-append-version="true"></script>
    @RenderSection("Styles", required: false)
</head>
<body class="app-shell">
    @await Html.PartialAsync("_Navbar")
    @await Component.InvokeAsync("ToastHost")
    @await Component.InvokeAsync("ConfirmModal")

    <div class="d-none">@Html.AntiForgeryToken()</div>

    <main role="main" class="app-content">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    @await Html.PartialAsync("_Footer")

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
